{
  "name": "whatsapp-reminders",
  "version": "1.0.0",
  "description": "App personal de recordatorios por WhatsApp usando Twilio",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only server-with-nextjs.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/server-with-nextjs.js",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "render-build": "npm ci --include=dev && npx prisma generate && npx prisma db push --skip-generate && tsc",
    "render-start": "NODE_ENV=production node dist/server-with-nextjs.js",
    "start:with-nextjs": "NODE_ENV=production node dist/server-with-nextjs.js",
    "start:integrated": "NODE_ENV=production node dist/server-with-nextjs.js"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "express": "^4.18.2",
    "twilio": "^4.23.0",
    "@prisma/client": "^5.11.0",
    "node-cron": "^3.0.3",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "openai": "^4.28.0",
    "express-rate-limit": "^7.1.5",
    "@types/node": "^20.14.12",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node-cron": "^3.0.11"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "ts-node-dev": "^2.0.0",
    "prisma": "^5.11.0",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "concurrently": "^8.2.2"
  },
  "private": true
}
