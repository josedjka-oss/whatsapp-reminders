{
  "name": "whatsapp-reminders",
  "version": "1.0.0",
  "description": "App personal de recordatorios por WhatsApp usando Twilio",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/server.js",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "render-build": "npm install --include=dev && prisma generate && tsc && npx prisma db push --accept-data-loss || npx prisma migrate deploy"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "express": "^4.18.2",
    "twilio": "^4.23.0",
    "@prisma/client": "^5.11.0",
    "node-cron": "^3.0.3",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "@types/node": "^20.14.12",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node-cron": "^3.0.11"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "ts-node-dev": "^2.0.0",
    "prisma": "^5.11.0"
  },
  "private": true
}
